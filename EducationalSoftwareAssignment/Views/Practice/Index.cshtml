@{
    ViewData["Title"] = "Exercises";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        .container {
            padding-top: 20px;
            padding-bottom: 100px;
            margin-top: 20px;
        }

        .exercise {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #fff4e6;
        }

        h1 {
            margin-bottom: 20px;
        }

        .exercise h2 {
            color: black;
        }

        .exercise p {
            color: #555;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body class="bg-dark text-white vsc-initialized">
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        @{
            var exercises = new[]
            {
        new { Title = "Exercise 1: Introduction to Variables", Description = "In this exercise, you will learn about declaring and using variables in Java.", Url = "/Practice/Exercise1" },
        new { Title = "Exercise 2: Control Structures", Description = "In this exercise, you will learn about control structures such as if-else and loops in Java.", Url = "/Practice/Exercise2" },
        new { Title = "Exercise 3: Functions and Methods", Description = "In this exercise, you will learn about defining and calling functions and methods in Java.", Url = "/Practice/Exercise3" },
        new { Title = "Exercise 4: Object-Oriented Programming", Description = "In this exercise, you will learn about the basics of object-oriented programming in Java.", Url = "/Practice/Exercise4" },
        new { Title = "Exercise 5: Inheritance and Polymorphism", Description = "In this exercise, you will learn about inheritance and polymorphism in Java.", Url = "/Practice/Exercise5" },
        new { Title = "Exercise 6: Exception Handling", Description = "In this exercise, you will learn about exception handling in Java.", Url = "/Practice/Exercise6" },
        new { Title = "Exercise 7: File I/O", Description = "In this exercise, you will learn about file input and output in Java.", Url = "/Practice/Exercise7" },
        new { Title = "Exercise 8: Advanced Topics", Description = "In this exercise, you will learn about some advanced topics in Java.", Url = "/Practice/Exercise8" },
        new { Title = "Exercise 9: Java Collections Framework", Description = "In this exercise, you will learn about the Java Collections Framework, including lists, sets, and maps.", Url = "/Practice/Exercise9" }
        };
            var visibility = (bool[])ViewBag.ExerciseVisibility;
        }

        @for (int i = 0; i < exercises.Length; i++)
        {
            if (visibility[i])
            {
                <div class="exercise">
                    <h2>@exercises[i].Title</h2>
                    <p>@exercises[i].Description</p>
                    <a class="btn btn-primary" href="@exercises[i].Url">Start Exercise</a>
                </div>
            }
        }
    </div>
    <br />
    <br />
    <br />
    <br />
</body>
</html>